<div class="container outer entry-box border border-2 rounded-3 ps-5 pe-5 pt-3 pb-3">
    <!-- <div class="inner-blur rounded-3"></div> -->
    <h1 class="text-center mt-3 mb-5 page-text head-title">Register</h1>
    <form action="/register" method="post" class="row justify-content-center align-items-center g-2 fs-5">
        <div class="mb-3 form-group">
            <label for="name" class="form-label fs-5 fw-medium page-text">Username</label>
            <input type="text" class="form-box rounded-5" name="username" placeholder="Enter a username" required>
        </div>
        <div class="mb-3 form-group">
            <label for="password" class="form-label fs-5 fw-medium page-text">Password</label>
            <input type="password" name="password" class="form-box rounded-5" placeholder="Enter a password" required>
        </div>
        <p class="fs-6 page-text">Already have an account? <a href="/login">Sign in</a></p>
        <button type="submit" class="btn mb-5 btn-primary button-submit">Submit</button>
    </form>
</div>